{% extends 'default/index.html.twig' %}

{% block content %}
    <div id="TaskFunctions">
        <a href="{{ path('createTask') }}"><input type="button" name="createTaskButton" class="Button" value="Create Task"/></a>
    </div>
    {% for task in tasks %}
        <div class="taskIndex">
            <div class="titleTask">{{ task.title }}</div>
            <div class="description">
                {{ task.description }}
            </div>
            <div>
                <input type="button" name="taskDetailButton" value="Details" class="Button" />
            </div>
        </div>
    {% endfor %}
{% endblock %}